<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginRight="6dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/catRowWrapper"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/categoria_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/catRowName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/catRowGoIcon"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="Gastronomia"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/catRowGoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_go"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/catRowDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/catRowGoIcon"
            android:layout_alignLeft="@+id/catRowName"
            android:layout_toLeftOf="@+id/catRowGoIcon"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="Restaurantes, Bar, Helados, Pizzas, Carlitos, Asado, etc"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/tag_line"
            android:textSize="13sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/catRowIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_bebidas"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>