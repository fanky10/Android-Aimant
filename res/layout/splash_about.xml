<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/splashAboutLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_about_aimantlogo" />

    <ImageView
        android:id="@+id/splashAboutContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/splashAboutLogo"
        android:layout_alignLeft="@+id/splashAboutLogo"
        android:layout_below="@+id/splashAboutLogo"
        android:src="@drawable/home_about_aimantcontact" />

    <ImageView
        android:id="@+id/splashClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close_splash" />

</RelativeLayout>