<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/com.mawape.aimant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <include layout="@layout/common_menubar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/slidedPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_bar"
        android:orientation="vertical" >

        <com.mawape.aimant.widget.SlidePanel
            android:id="@+id/topPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dip"
            panel:animationDuration="1000"
            panel:closedHandle="@drawable/icon_collapse"
            panel:content="@+id/panelContent"
            panel:handle="@+id/panelHandle"
            panel:linearFlying="true"
            panel:openedHandle="@drawable/icon_expand"
            panel:position="top" >

            <Button
                android:id="@+id/panelHandle"
                android:layout_width="fill_parent"
                android:layout_height="33dip" />

            <LinearLayout
                android:id="@+id/panelContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dip"
                    android:text="From the Top -> Down"
                    android:textSize="16dip"
                    android:textStyle="bold" />
                <!--
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/home_about_aimantlogo" />
                -->
            </LinearLayout>
        </com.mawape.aimant.widget.SlidePanel>
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/detailTopPhoneLayout"
        android:layout_below="@+id/slidedPanel"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/detailTopPhoneLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/detailBotPhoneLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/informacion_text_rounded"
        android:visibility="gone" >

        <TextView
            android:id="@+id/detailPrimaryPhoneText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/detailPrimaryPhoneIcon"
            android:gravity="center"
            android:text="@string/info_telefono"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/menu_title"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/detailPrimaryPhoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_phone_green"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/detailPrimaryPhoneIcon"
            android:background="@color/info_separator" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detailBotPhoneLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/informacion_text_rounded" >

        <TextView
            android:id="@+id/detailSecondaryPhoneText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/detailSecondaryPhoneIcon"
            android:gravity="center"
            android:text="@string/info_telefono"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/menu_title"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/detailSecondaryPhoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_phone_green"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/detailSecondaryPhoneIcon"
            android:background="@color/info_separator" />
    </RelativeLayout>

</RelativeLayout>