<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/negRowTopLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/negocios_row_top_rounded" >

        <ImageView
            android:id="@+id/negRowImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/rock_and_fellers" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fadeFrame"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/negRowTopLayout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/negocios_row_bot_rounded"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/negRowNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/negRowBtnCall"
            android:text="Sushi Home"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/negRowDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/negRowNombre"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/negRowBtnCall"
            android:text="Moreno 75 bis"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/negRowBtnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/negRowBtnMap"
            android:src="@drawable/icon_phone_small_rounded" />

        <ImageView
            android:id="@+id/negRowBtnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/btn_go_rounded" />
    </RelativeLayout>

</RelativeLayout>