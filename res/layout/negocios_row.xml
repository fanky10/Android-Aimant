<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:background="@drawable/neg_list_bkg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/negRowImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fadeFrame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/fenicia_small" />
    <!--
		Use an hexadecimal background color code, 
		wich consists of two digits for alpha and six for the color itself 
    -->

    <RelativeLayout
        android:id="@+id/fadeFrame"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/neg_fade_bkg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/negRowNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sushi Home"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/negRowDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Moreno 75 bis"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/negRowBtnCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/negRowBtnMap"
            android:background="#15000000"
            android:src="@drawable/ic_phone_call"
            android:text="Call" />

        <ImageButton
            android:id="@+id/negRowBtnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearContainer"
            android:layout_centerVertical="true"
            android:background="#15000000"
            android:src="@drawable/ic_go_forward"
            android:text="Map" />

    </RelativeLayout>

</RelativeLayout>