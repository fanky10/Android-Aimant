<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/neg_list_bkg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/negRowTopLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/negocios_row_top_rounded" >

        <ImageView
            android:id="@+id/negRowImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/image_default" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fadeFrame"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/negRowTopLayout"
        android:background="@drawable/neg_fade_bkg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/negRowNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sushi Home"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/negRowDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Moreno 75 bis"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/negRowBtnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/negRowBtnMap"
            android:background="@color/fade_fifteen"
            android:src="@drawable/icon_phone_small"
            android:text="Call" />

        <ImageButton
            android:id="@+id/negRowBtnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearContainer"
            android:layout_centerVertical="true"
            android:background="@color/fade_fifteen"
            android:src="@drawable/btn_go"
            android:text="Map" />
    </RelativeLayout>

</RelativeLayout>